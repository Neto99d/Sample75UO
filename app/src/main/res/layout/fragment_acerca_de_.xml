<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:textAlignment="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10px">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="362dp"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    app:srcCompat="@drawable/pulover_atras" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="325dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/colorPrimaryDark">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/DireccionTitulo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dirección"
                            android:textAlignment="center"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/Direccion"
                            android:layout_width="match_parent"
                            android:layout_height="53dp"
                            android:layout_marginStart="5dp"
                            android:text="Avenida Patricio Lumumba No. 507 entre Avenida de las Américas y Calle 1ra, Reparto Jiménez, Consejo Popular José Martí Norte. CP 90500"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/TelefonoTitulo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Teléfonos"
                            android:textAlignment="center"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/Telefono"
                            android:layout_width="380dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:autoLink="phone"
                            android:text="Dir. de Comunicación Institucional: +5322631832"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/Telefono2"
                            android:layout_width="377dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:autoLink="phone"
                            android:text="Oficina de Atención a la Población: +5322633031"
                            android:textAlignment="gravity"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/CorreoTitulo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Correos"
                            android:textAlignment="center"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/Correo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoLink="email"
                            android:text="comunicacion@uo.edu.cu"
                            android:textAlignment="center"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/Correo2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoLink="email"
                            android:text="poblacion@consejo.uo.edu.cu"
                            android:textAlignment="center"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/textVersion"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="80dp"
                            android:text="Versión 2.0"
                            android:textAlignment="center"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/textAño"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="2022"
                            android:textAlignment="center"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </FrameLayout>
    </ScrollView>
</LinearLayout>
