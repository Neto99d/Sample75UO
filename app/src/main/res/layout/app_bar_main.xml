<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Sample75UO.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.Sample75UO.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_main" />

    <com.github.clans.fab.FloatingActionMenu
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu_fab_label="Redes Sociales">

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="facebookFab"
            android:src="@drawable/ic_action_facebook"
            app:fab_colorNormal="@color/facebook"
            app:fab_label="Facebook" />

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="linkedinFab"
            android:src="@drawable/ic_action_linkedin"
            app:fab_colorNormal="@color/linkedin"
            app:fab_label="Linkedin" />

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="youtubeFab"
            android:src="@drawable/ic_action_youtube"
            app:fab_colorNormal="@color/youtube"
            app:fab_label="Youtube" />

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="twitterFab"
            android:src="@drawable/ic_action_twitter"
            app:fab_colorNormal="@color/twitter"
            app:fab_label="Twitter" />

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="instagramFab"
            android:src="@drawable/ic_action_instagram"
            app:fab_colorNormal="@color/instagram"
            app:fab_label="Instagram" />

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="telegramFab"
            android:src="@drawable/ic_action_telegram"
            app:fab_colorNormal="@color/telegram"
            app:fab_label="Telegram" />


    </com.github.clans.fab.FloatingActionMenu>


</androidx.coordinatorlayout.widget.CoordinatorLayout>